<div class="center-block boxed-s mgtb-l">
  <div class="align-center">
    <h2>Sign In</h2>
  </div>
  <%= form_tag sessions_path do |f| %>
    <fieldset class="form-field mbs">
      <%= label_tag :login, nil, class: "form-label" %>
      <%= text_field_tag :login, nil, autofocus: true, class: "form-input" %>
    </fieldset>
    <fieldset class="form-field mbs-m">
      <%= label_tag :password, nil, class: "form-label"  %>
      <%= password_field_tag :password, nil, autocomplete: "off", class: "form-input login" %>
    </fieldset>

    <div class="mts mbs align-center">
      <%= submit_tag "Log in", class: "btn btn-submit" %>
      <p class="mtt tcg ts-m">
        Don't have an account? <%= link_to 'Create Free Account', new_student_path %>
      </p>
    </div>
  <% end %>
</div>
