<div class="maximum-width">
  <div id="settings">
    <div class="settings-header">
      <h2>Settings</h2>
    </div>
    <div class="settings-content group">
      <%= form_tag({controller: 'users', action: "update_settings"}) do %>
        <fieldset class="group">
          <%= label_tag 'user[username]', 'Display Name', class: 'col-sm-2 control-label' %>
          <div class="col-sm-6">
            <%= text_field_tag 'user[username]', nil, value: @user.username, class: "form-control" %>
          </div>
        </fieldset>
        <fieldset class="group">
          <%= label_tag 'user[email]', 'Email', class: 'col-sm-2 control-label'  %>
          <div class="col-sm-6">
            <%= text_field_tag 'user[email]', nil, value: @user.email, class: "form-control" %>
          </div>
        </fieldset>
        <fieldset class="group">
          <%= label_tag 'user[profile][bio]', 'Bio', class: 'col-sm-2 control-label'  %>
          <div class="col-sm-6">
            <%= text_area_tag 'user[profile][bio]', nil, value: (@user.profile[:bio] if @user.profile), class: "form-control", row: "20" %>
          </div>
        </fieldset>
        <fieldset class="group">
          <%= label_tag 'user[display_image]', 'Email', class: 'col-sm-2 control-label' %>
          <div class="col-sm-6 upload">
            <%= text_field_tag 'user[display_image]', nil, class:"form-control" %>
          </div>
        </fieldset>
        <button class="btn btn-default" type="submit">Submit</button>
      <% end %>
    </div>
  </div>
</div>
