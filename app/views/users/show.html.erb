<div class="profile-content">
  <div class="banner-container">
    <a class="channel-link" href="#">
      <div class="profile-photo">
        <div class="goto">Go to Channel</div>
        <img alt="stwitch007" data-bindattr-835="835" src="http://static-cdn.jtvnw.net/jtv_user_pictures/xarth/404_user_150x150.png"/>
      </div>
      <div class="live-status">Offline</div>
    </a>
    <div class="profile-info">
      <h3 class="profile-name">
        <%= @user.username %>
      </h3>
      <p class="profile-bio">
        <% if @user.profile %>
          " "
        <% else %>
          <em>This uer has no bio.</em>
        <% end %>
        <%= link_to "#", class: "profile-edit-link" do   %>
          <svg class="svg-edit" height="16px" version="1.1" viewBox="0 0 16 16" width="16px" x="0px" y="0px">
            <path clip-rule="evenodd" d="M6.414,12.414L3.586,9.586l8-8l2.828,2.828L6.414,12.414z M4.829,14H2l0,0v-2.828l0.586-0.586l2.828,2.828L4.829,14z" fill-rule="evenodd"></path>
          </svg>
          Edit
        <% end %>
      </p>
    </div>
  </div>
  <div class="profile-details">
    <div class="profile-nav">
      <ul class="nav-list">
        <li class="is-active list-item nav-item">
          <%= link_to 'Courses' , "#", class: "nav-item-link list-item-link" %>
        </li>
        <li class="nav-item list-item">
          <%= link_to 'History' , "#", class: "nav-item-link list-item-link" %>
        </li>
        <li class="nav-item list-item">
          <%= link_to 'Rewards' , "#", class: "nav-item-link list-item-link" %>
        </li>
      </ul>
    </div>
  </div>
</div>


