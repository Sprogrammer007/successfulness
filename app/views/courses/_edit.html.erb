
<div class="header section">
  <div class="course-status dropdown draft"  data-toggle="tooltip" data-placement="bottom" title="Course Status">
    <div data-toggle="dropdown">
      <i class="fa fa-info"></i> Draft
      <span class="caret"></span>
    </div>
    {{view 'dropdown-menu' content=names  optionValuePath="content.id" optionLabelPath="content.firstName"}}
  </div>
  {{course-title course=this classNames="title"}}
</div>
 
<div class="nav section clearfix">
  <div class="btn-group btn-group-justified center-block">
    <div class="btn btn-default active">
      <i class="fa fa-cog"></i> Settings
    </div>
    <div class="btn btn-default">
      <i class="fa fa-users"></i>  Students
    </div>

    <div class="btn btn-default">
      <i class="fa fa-comments"></i> Feedbacks
    </div>
  </div>
</div>


<div class="course-settings section clearfix">

    <div class="part section clearfix mtl">
      <div class="col-lg-9 col-lg-offset-3">

        <div class='option'>
          <i class="fa fa-calendar"></i> Published: 
        </div>
        
        <div class='option'>
          <i class="fa fa-users"></i> Student Limit
        </div>
      </div>
    </div>

    <div class="part clearfix mbl">
      <div class="col-lg-3" style="border-right: 1px solid #AAA; margin-left: 16px;">
        <div class="course-thumb">
          <%= image_tag("image_placeholder.png") %>
          <label class="upload-hover">
            <div class="vertical-center">
              <div>        
                {{view "thumb" name="course[thumbnail]"}}
                <i class="fa fa-cloud-upload fa-4x"></i>
              </div>
            </div>
          </label>
        </div>
      </div>
    </div>

</div>

<div class="course-description section">
  Click to add course description
</div>
