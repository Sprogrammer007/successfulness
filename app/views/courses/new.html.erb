<div id="course">
  <%= form_for @course, url: { action: 'create' }, html:{ id: "", class: "" } do |f| %>
      <section class="clearfix">
        <h2>Create Your Course</h2>
        <div class="" style="width: 200px; float: left; margin-right: 20px;">
          <%= image_tag("image_placeholder.png") %>
          <div class="btn-group btn-group-justified" role="group" aria-label="...">
            <div class="btn-group" role="group">
              <button type="button" class="btn btn-default">
                <i class="fa fa-cloud-upload fa-2x"></i>
              </button>
            </div>
            <div class="btn-group" role="group">
              <button type="button" class="btn btn-default">
                <i class="fa fa-pencil-square-o fa-2x"></i>
              </button>
            </div>
            <div class="btn-group" role="group">
              <button type="button" class="btn btn-default">
                <i class="fa fa-trash fa-2x"></i>
              </button>
            </div>
          </div>
        </div>

        <fieldset class="form-group">
          <%= f.text_field :title, class: "form-control", placeholder: "Enter Course Name" %>
        </fieldset>
        
        <fieldset class="form-group">
          <%= f.select(:course_category_id, options_for_select(PageTemplate.categories), { :include_blank => 'Please Select a Course Category' }, { class: "form-control" }) %>
        </fieldset>

        <fieldset>
          <%= f.label :description, class: "form-label" %>
          {{#ck-textarea id="ck-textarea1" height="150px"}}
          <%= f.text_area(:description, id: "ck-textarea1", class: "form-control", placeholder: "Enter a Course Description") %>
          {{/ck-textarea}}
        </fieldset>
      </section>

      <section>
        <h2>Course Details</h2>
        <div>
        <%= f.date_select :start_date, {}, class: "form-control" %>
        </div>
      </section>
      <section>
        <h2>Course Enrollment Detail</h2>
      </section>
      <section>
        <h2>Course Pricing</h2>
      </section>
      <button class="btn btn-default" type="submit">Create Course</button>
  <% end %>
</div>