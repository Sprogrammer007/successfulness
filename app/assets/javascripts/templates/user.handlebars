<div class="sign-up center-block">
{{log this}}
  {{error-messages for=this}}
  
  <h2>Create an Free Account</h2>
  <form  role="form">
    <fieldset class="form-group mbs">
      <label class="form-label">Email: </label>
      {{input valueBinding="email" class="form-control"}}
    </fieldset>

    <fieldset class="form-group mbs">
      <label class="form-label">Password: </label> <i>(8 characters minimum)</i>
      {{input valueBinding="password" type="password" class="form-control"}}
     </fieldset>

    <fieldset class="form-group mbs">
       <label class="form-label">Confirm Password: </label>
        {{input valueBinding="password_confirmation" type="password" class="form-control"}}
    </fieldset>
    <input type="submit" value="Create Account" class="btn btn-default" {{action 'createAccount'}} >
  </form>

</div>